# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Mod2+KP_1 workspace $ws11
bindsym $mod+Mod2+KP_2 workspace $ws12
bindsym $mod+Mod2+KP_3 workspace $ws13
bindsym $mod+Mod2+KP_4 workspace $ws14
bindsym $mod+Mod2+KP_5 workspace $ws15
bindsym $mod+Mod2+KP_6 workspace $ws16
bindsym $mod+Mod2+KP_7 workspace $ws17
bindsym $mod+Mod2+KP_8 workspace $ws18
bindsym $mod+Mod2+KP_9 workspace $ws19
bindsym $mod+Mod2+KP_0 workspace $ws20

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+Mod2+Shift+KP_End move container to workspace $ws11
bindsym $mod+Mod2+Shift+KP_Down move container to workspace $ws12
bindsym $mod+Mod2+Shift+KP_Next move container to workspace $ws13
bindsym $mod+Mod2+Shift+KP_Left move container to workspace $ws14
bindsym $mod+Mod2+Shift+KP_Begin move container to workspace $ws15
bindsym $mod+Mod2+Shift+KP_Right move container to workspace $ws16
bindsym $mod+Mod2+Shift+KP_Home move container to workspace $ws17
bindsym $mod+Mod2+Shift+KP_Up move container to workspace $ws18
bindsym $mod+Mod2+Shift+KP_Prior move container to workspace $ws19
bindsym $mod+Mod2+Shift+KP_Insert move container to workspace $ws20

bindsym $mod+Control+Left workspace prev
bindsym $mod+Control+Right workspace next

bindsym $mod+Shift+Tab workspace prev
bindsym $mod+Tab workspace next

bindsym $mod+Shift+Control+Left move workspace prev;workspace prev
bindsym $mod+Shift+Control+Right move workspace next;workspace next

