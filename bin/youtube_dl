#!/usr/bin/env bash
# vim ft=bash
set -e

TARGET_DIR=${TARGET_DIR:-"$HOME/Music/Music"}

youtube-dl --extract-audio --audio-format mp3 -o "${TARGET_DIR}/%(title)s.%(ext)s" --verbose "$1"

