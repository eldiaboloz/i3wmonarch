#!/bin/bash
# in cmus
#:set status_display_program=/home/iliyan/bin/cmus_notify
if [ "$2" == "playing" ]; then
    pkill notify-osd
    song=$(basename "$4")
    DISPLAY=:0 DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus notify-send --icon=media-playback-start "Now Playing" "$(printf %q $song)" -t 100
fi


