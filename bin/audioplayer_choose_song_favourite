#!/usr/bin/env bash
# vim ft=bash

# choose song from favourites playlist
filename=$(mpc -f "%file%" playlist Favorites | fzf --reverse)
[ -z "$filename" ] && exit 1

# add the song to the current playlist
mpc insert "$filename"

# if we only want to queue next song
[[ "$(basename "$0")" == *_queue ]] && exit 0

# play the song
mpc next

