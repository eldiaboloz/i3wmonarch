#!/bin/bash
def_device="alsa_output.usb-Creative_Technology_Ltd._SB_Tactic3D_Rage_Wireless-00.analog-stereo"
case $1 in
inc)
pactl set-sink-volume $def_device +5%
;;
dec)
pactl set-sink-volume "$def_device" -5%
;;
mute)
pactl set-sink-mute "$def_device" toggle
;;
esac
sleep 0.1
pkill -RTMIN+1 i3blocks
