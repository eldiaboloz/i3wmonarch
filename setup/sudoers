 %sudo	ALL=(ALL) ALL

# start vpn without sudo password
iliyan ALL=(ALL) NOPASSWD: /usr/bin/systemctl start openvpn-client@swarm.service
iliyan ALL=(ALL) NOPASSWD: /usr/bin/systemctl start openvpn-client@work.service
iliyan ALL=(ALL) NOPASSWD: /usr/bin/systemctl start openvpn-client@home.service

# stop vpn without sudo password
iliyan ALL=(ALL) NOPASSWD: /usr/bin/systemctl stop openvpn-client@swarm.service
iliyan ALL=(ALL) NOPASSWD: /usr/bin/systemctl stop openvpn-client@work.service
iliyan ALL=(ALL) NOPASSWD: /usr/bin/systemctl stop openvpn-client@home.service

