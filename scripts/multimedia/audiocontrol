#!/bin/bash

case $1 in
inc)
    # max volume
    [ ! -z "$2" ] && [ "$(ponymix get-volume)" -ge 50 ] && exit
    pactl set-sink-volume @DEFAULT_SINK@ +5%
;;
dec)
    [ ! -z "$2" ] && [ "$(ponymix get-volume)" -le 20 ] && exit
    pactl set-sink-volume @DEFAULT_SINK@ -5%
;;
mute)
    pactl set-sink-mute @DEFAULT_SINK@ toggle
;;
esac
sleep 0.1
pkill -RTMIN+1 i3blocks
