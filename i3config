# cmus controls
bindsym XF86AudioPlay exec audioplayer_control pause
bindsym XF86AudioPause exec audioplayer_control pause
bindsym XF86AudioNext exec audioplayer_control next
bindsym XF86AudioPrev exec audioplayer_control prev
bindsym XF86AudioStop exec audioplayer_control stop

# toggle pause
bindsym $mod+p exec audioplayer_control pause
bindsym $mod+o exec audioplayer_control stop
# prev/next
bindsym $mod+bracketleft exec audioplayer_control prev
bindsym $mod+bracketright exec audioplayer_control next
# seek -/+
bindsym $mod+Shift+bracketleft exec audioplayer_control seekd
bindsym $mod+Shift+bracketright exec audioplayer_control seeki

bindsym Shift+XF86AudioPrev exec audioplayer_control seekd
bindsym Shift+XF86AudioNext exec audioplayer_control seeki

bindsym $mod+Control+Shift+bracketleft exec audioplayer_control seekd60
bindsym $mod+Control+Shift+bracketright exec audioplayer_control seeki60

#start cmus
